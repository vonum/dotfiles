# dotfiles
alias dot="cd ~/dotfiles && ./install && cd -"

# generic
alias timeout="gtimeout"
alias src="source"
alias rip="rm -rf"
alias zz="source ~/.zshrc"
alias code="cd ~/code"
alias kek="echo 'pls'"

alias ll="ls -lah"
alias grp="grep -rni"
alias password="openssl rand -base64 32"
alias pr="hub pull-request"
alias clip="xclip -selection c"
alias pp="python -m json.tool"
alias myip="curl ifconfig.me"

alias v="nvim"
alias g="git"

alias tf="terraform"
alias hh="npx hardhat"
alias dc="docker compose"
alias k="kubectl"

# elixir
alias mmm="mix deps.get && mix deps.compile"
alias ii="iex -S mix"

# python
alias python="python3"
alias jup="jupyter notebook"
alias poet="poetry run"

## twinstake
alias asl="aws sso login"
alias twinstake="cd ~/code/twinstake/"
alias dev-db="~/bin/dev-db.sh"
alias prod-db="~/bin/prod-db.sh"
alias testnet-db="~/bin/testnet-db.sh"

alias dev-db-creds="aws secretsmanager get-secret-value --secret-id development/apps/api/postgres/user --region eu-west-1 --query 'SecretString' --output text"
alias prod-db-creds="aws secretsmanager get-secret-value --profile data-prod --secret-id production/apps/api/postgres/user --region eu-west-1 --query 'SecretString' --output text"
alias testnet-db-creds="aws secretsmanager get-secret-value --profile data-prod --secret-id testnet/apps/api/postgres/user --region eu-west-1 --query 'SecretString' --output text"

alias tslocal='curl -H "Authorization: Bearer ${LOCAL_AUTH_TOKEN}"'
alias awslocal="aws --profie local"
