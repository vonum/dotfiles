# rails
alias be="bundle exec"
alias bi="bundle install --path vendor/bundle"
alias bdb="bundle exec rake db:migrate db:test:prepare"

# dotfiles
alias dot="cd ~/dotfiles && ./install && cd -"

# generic
alias src="source"
alias rip="rm -rf"
alias zz="source ~/.zshrc"
alias v="vim"
alias g="git"
alias ls="ls --color=yes"
alias ll="ls -lah"
alias grp="grep -rni"
alias password="openssl rand -base64 32"
alias code="cd ~/code"
alias pr="hub pull-request"

# elixir
alias mmm="mix deps.get && mix deps.compile"
alias ii="iex -S mix"

# python
alias py2="~/anaconda2/bin/python2.7"
alias pip2="~/anaconda2/bin/pip"
alias py3="~/anaconda3/bin/python3.6"
alias pip3="~/anaconda3/bin/pip"

# virtualenvwrapper
alias workenv="workon"
alias dcenv="deactivate"
alias mkenv="mkvirtualenv"
alias showenv="showvirtualenv"
alias lsenv="lsvirtualenv"
alias rmenv="rmvirtualenv"
alias cpenv="cpvirtualenv"
