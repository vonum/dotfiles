# dotfiles
alias dot="cd ~/dotfiles && ./install && cd -"

# generic
alias timeout="gtimeout"
alias src="source"
alias rip="rm -rf"
alias zz="source ~/.zshrc"
alias v="nvim"
alias g="git"
alias ls="ls"
alias ll="ls -lah"
alias grp="grep -rni"
alias password="openssl rand -base64 32"
alias code="cd ~/code"
alias pr="hub pull-request"
alias kek="echo 'kek'"
alias dc="docker-compose"
alias k="kubectl"
alias clip="xclip -selection c"
