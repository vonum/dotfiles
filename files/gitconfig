[user]
  email = vonum.mk@gmail.com
  name = vonum

[push]
  default = current

[alias]
  a     = add --all
  st    = status -sb
  c     = commit
  cm    = commit -m
  ca    = commit --amend
  cl    = clone
  br    = branch
  co    = checkout
  df    = diff
  dfc   = diff --cached
  lg    = !git --no-pager log --pretty=format:'%C(141 bold)%h%Creset %C(81 bold)(%><(12)%cr%><|(12))%Creset - %s %C(214 bold)<%an>%Creset' -10
  pl    = pull
  ps    = push
  sta   = stash
  stap  = stash apply
  stad  = stash drop
  rb    = rebase
  f     = fetch
  undo  = reset --soft HEAD^
  redo  = git reset 'HEAD@{1}'
  count = !git shortlog -sne
  up    = !git checkout master && git pull && git checkout -
  purge = !git checkout master && git branch | grep -v "master" | xargs git branch -D
  amend = !git add -A && git commit --amend --no-edit
  files = diff --name-only origin/master
  bootstrap =!git init . && git add . && git commit -m "Bootstrap"
  sync  = !git pull origin master && git push vonum master

[mycolors]
  green     = 83
  cyan      = 51
  red       = 167
  yellow    = 191
  magenta   = 177
  purple    = 141
  lightblue = 81

[color]
  ui = auto
[color "branch"]
  current = 83 bold
  local   = 51 bold
  remote  = 167 bold
[color "diff"]
  meta = 191 bold
  frag = 177 bold
  old  = 167 bold
  new  = 83 bold
[color "status"]
  added     = 83 bold
  changed   = 191 bold
  untracked = 161 bold

[core]
  editor = vim
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
